<h1>Editing Book</h1>

<%= form_with model: Book.new do |f| %>

  <h6>Title</h6>
  <%= f.text_field :title %>
  
  <h6>Opinion</h6>
  <%= f.text_area :body %>
  
  <div class="actions">
    <%=f.submit'Update book',class: "btn btn-sm btn-secondary" %>
  </div>
<% end %>

